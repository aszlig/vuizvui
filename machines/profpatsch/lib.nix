{ lib, pkgs }:
rec {
  fish = pkgs.fish;

  authKeys = ["ssh-rsa  philip@nyx"];

  philip = rec {
    name = "philip";
    extraGroups = [
      "wheel"
      "networkmanager"
      "docker"
      "vboxusers"
      "libvirtd"
      "scanner"
      "jackaudio"
    ];
    uid = 1000;
    createHome = true;
    home = "/home/philip";
    passwordFile = "${home}/.config/passwd";
    shell = "${lib.getBin fish}/bin/fish";
    openssh.authorizedKeys.keys = authKeys;
    isNormalUser = true;
  };
}
